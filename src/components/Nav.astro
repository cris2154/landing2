---
const links = [
  { href: '#inicio', label: 'Inicio' },
  { href: '#servicios', label: 'Servicios' },
  { href: '#testimonios', label: 'testimonios' },
  { href: '#contacto', label: 'Contacto' },
];
---

<nav class="w-full border-b border-sky-200/60 bg-white backdrop-blur sticky top-0 z-50">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 md:py-4">

    {/* LOGO */}
    <a href="/" class="flex items-center gap-2">
      <span class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-sky-500 text-white font-bold text-lg">
        D
      </span>
      <span class="flex flex-col leading-tight">
        <span class="text-sm font-bold text-sky-700">
          DentalCare
        </span>
        <span class="text-xs text-sky-600/70">
          Sonrisas saludables
        </span>
      </span>
    </a>

    {/* Desktop nav */}
    <div class="hidden items-center gap-6 md:flex">
      {links.map((link) => (
        <a
          href={link.href}
          class="text-sm text-sky-700/80 transition hover:text-sky-700 hover:-translate-y-0.5"
        >
          {link.label}
        </a>
      ))}

      {/* Botón WhatsApp (celeste + ícono blanco) */}
      <a
        href="https://wa.me/XXXXXXXXXXX"
        target="_blank"
        class="flex items-center gap-2 rounded-full bg-sky-500 px-5 py-2 text-sm font-medium text-white shadow hover:bg-sky-600 hover:-translate-y-0.5 transition"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          class="w-4 h-4"
          viewBox="0 0 16 16"
        >
          <path d="M13.601 2.326A7.93 7.93 0 008.043.062C3.656.062.102 3.615.102 8.003c0 1.41.371 2.787 1.079 4.01L.057 15.938l4.02-1.088a7.94 7.94 0 003.966 1.061h.003c4.387 0 7.941-3.554 7.941-7.941 0-2.122-.827-4.116-2.386-5.644zM8.043 14.24a6.18 6.18 0 01-3.15-.867l-.226-.135-2.385.646.637-2.328-.147-.239a6.17 6.17 0 01-1.001-3.415c0-3.417 2.78-6.197 6.197-6.197a6.18 6.18 0 014.383 10.565 6.156 6.156 0 01-4.308 1.97zm3.405-4.548c-.185-.093-1.095-.54-1.266-.602-.17-.064-.293-.093-.415.093-.123.185-.476.602-.583.725-.107.123-.215.138-.4.046-.185-.093-.78-.287-1.485-.915-.548-.488-.918-1.093-1.026-1.278-.107-.185-.012-.285.081-.377.083-.083.185-.215.277-.323.092-.108.123-.185.185-.308.062-.123.031-.231-.015-.324-.046-.093-.415-1.004-.568-1.374-.15-.36-.303-.312-.415-.318-.107-.006-.231-.007-.354-.007-.123 0-.323.046-.492.231-.17.185-.646.632-.646 1.54 0 .908.662 1.784.755 1.909.092.123 1.303 1.992 3.157 2.796.442.191.786.305 1.054.391.443.141.846.121 1.164.074.355-.053 1.095-.447 1.249-.879.154-.431.154-.801.108-.879-.046-.078-.17-.123-.354-.215z" />
        </svg>
        Reservar
      </a>
    </div>

    {/* Mobile nav */}
    <details class="relative md:hidden">
      <summary class="list-none cursor-pointer rounded-full border border-sky-400/40 px-3 py-1.5 text-xs uppercase tracking-[0.16em] text-sky-600 flex items-center gap-2">
        Menu
      </summary>

      <div class="absolute right-0 mt-2 w-44 rounded-xl border border-sky-400/40 bg-white p-2 shadow-xl">
        {links.map((link) => (
          <a
            href={link.href}
            class="block rounded-lg px-3 py-2 text-sm text-sky-700 hover:bg-sky-50"
          >
            {link.label}
          </a>
        ))}
        <a
          href="https://wa.me/XXXXXXXXXX"
          target="_blank"
          class="mt-1 flex items-center gap-2 rounded-lg bg-sky-500 px-3 py-2 text-sm font-medium text-white hover:bg-sky-600"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            class="w-4 h-4"
            viewBox="0 0 16 16"
          >
            <path d="M13.601 2.326A7.93 7.93 0 008.043.062C3.656.062.102 3.615.102 8.003c0 1.41.371 2.787 1.079 4.01L.057 15.938l4.02-1.088a7.94 7.94 0 003.966 1.061h.003c4.387 0 7.941-3.554 7.941-7.941 0-2.122-.827-4.116-2.386-5.644zM8.043 14.24a6.18 6.18 0 01-3.15-.867l-.226-.135-2.385.646.637-2.328-.147-.239a6.17 6.17 0 01-1.001-3.415c0-3.417 2.78-6.197 6.197-6.197a6.18 6.18 0 014.383 10.565 6.156 6.156 0 01-4.308 1.97zm3.405-4.548c-.185-.093-1.095-.54-1.266-.602-.17-.064-.293-.093-.415.093-.123.185-.476.602-.583.725-.107.123-.215.138-.4.046-.185-.093-.78-.287-1.485-.915-.548-.488-.918-1.093-1.026-1.278-.107-.185-.012-.285.081-.377.083-.083.185-.215.277-.323.092-.108.123-.185.185-.308.062-.123.031-.231-.015-.324-.046-.093-.415-1.004-.568-1.374-.15-.36-.303-.312-.415-.318-.107-.006-.231-.007-.354-.007-.123 0-.323.046-.492.231-.17.185-.646.632-.646 1.54 0 .908.662 1.784.755 1.909.092.123 1.303 1.992 3.157 2.796.442.191.786.305 1.054.391.443.141.846.121 1.164.074.355-.053 1.095-.447 1.249-.879.154-.431.154-.801.108-.879-.046-.078-.17-.123-.354-.215z" />
