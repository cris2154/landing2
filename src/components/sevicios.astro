<script>
    import gsap from "gsap";
	// LOOP INFINITO REAL SIN REINICIO
	const track = document.querySelector("#logosTrack");
	const wrapper = document.querySelector("#logosWrapper");

	// duplicar
	const clone = track.cloneNode(true);
	wrapper.appendChild(clone);

	// calcular ancho total
	let totalWidth = track.offsetWidth;

	// animaciÃ³n GSAP infinita real
	const tl = gsap.to("#logosWrapper .inline-flex", {
		x: `-=${totalWidth}`,
		duration: 20,
		ease: "none",
		modifiers: {
			x: gsap.utils.unitize((x) => parseFloat(x) % totalWidth)
		},
		repeat: -1
	});

	// Hover pausa
	wrapper.addEventListener("mouseenter", () => tl.pause());
	wrapper.addEventListener("mouseleave", () => tl.resume());
</script>
